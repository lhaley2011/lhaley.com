<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head_tag_manager %>
    <% include ../partials/head %>
    <link rel="stylesheet" href="/styles/exclude/contact.css">
    <script src="/js/exclude/contact.js"></script>
</head>
<body>
    <% include ../partials/header_tag_manager %>
    <div id="navbar">
        <% include ../partials/header %>
    </div>
    <div class="body">
      <div class="content">
        <div id="formMessages"></div>
        <br/>
        <div class='contact'>
          <div id="form-main">
            <div id="form-div">
              <form class="form" id="contactForm" action="/api/contact/send" method="POST">
                <p class="name">
                  <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" required />
                </p>
                <p class="email">
                  <input name="email" type="text" class="validate[required,custom[email]] feedback-input" id="email" placeholder="Email" required />
                </p>
                <p class="text">
                  <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="comment" placeholder="Comment" maxlength="300" required></textarea>
                </p>
                <div class="submit">
                  <input type="hidden" name="page" id="page" value="contact"/>
                  <input type="submit" name="action" value="SEND" id="contact-button-blue"/>
                  <div class="ease"></div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>
